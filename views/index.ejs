<!-- Container for navigation arrows and game images -->
<div class="container mt-5 position-relative">
    <!-- Navigation Arrows Container -->
    <div class="d-flex align-items-center justify-content-between">
        <!-- Back Arrow -->
        <a href="/prev" class="arrow-link position-relative">
            <div class="arrow-box rounded-circle shadow">
                <i class="fas fa-chevron-left"></i>
            </div>
        </a>

        <!-- Game Images Container -->
        <div class="row overflow-auto d-flex align-items-center flex-grow-1 py-3">
            <% items.forEach(item => { %>
            <div class="col-md-4 mb-4">
                <div class="card game-card text-bg-dark shadow-lg">
                    <a href="/game/<%= item._id %>" class="game-link">
                        <div class="ratio position-relative" style="--bs-aspect-ratio: 115%;">
                            <img src="<%= item.image %>" class="object-fit-cover rounded" alt="Game Image">
                            <div class="card-overlay d-flex align-items-center justify-content-center">
                                <h5 class="text-light card-title"><%= item.title %></h5>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
            <% }) %>
        </div>

        <!-- Forward Arrow -->
        <a href="/next" class="arrow-link position-relative">
            <div class="arrow-box rounded-circle shadow">
                <i class="fas fa-chevron-right"></i>
            </div>
        </a>
    </div>
</div>

<!-- Ensure Font Awesome is included -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/js/all.min.js"></script>

<style>
    .arrow-link {
        position: relative;
        display: inline-block;
        text-decoration: none;
    }

    .arrow-box {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 4rem;
        height: 4rem;
        background: radial-gradient(circle at 30% 30%, #8b0000, #4a0000);
        border-radius: 50%;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
        transition: background 0.3s, transform 0.3s, box-shadow 0.3s;
        overflow: hidden;
        position: relative;
    }

    .arrow-box:hover {
        background: radial-gradient(circle at 30% 30%, #661d15, #330000);
        transform: translateY(-5px);
        box-shadow: 0 6px 15px rgba(0, 0, 0, 0.4);
    }

    .arrow-box i {
        font-size: 2rem;
        color: #FFD700;
        position: relative;
        z-index: 2;
    }

    .arrow-box:before {
        content: '';
        position: absolute;
        top: -50%;
        left: -50%;
        width: 200%;
        height: 200%;
        background: linear-gradient(45deg, rgba(255, 255, 255, 0.2) 25%, transparent 25%, transparent 50%, rgba(255, 255, 255, 0.2) 50%, rgba(255, 255, 255, 0.2) 75%, transparent 75%, transparent);
        background-size: 50px 50px;
        transform: rotate(45deg);
        transition: opacity 0.3s, transform 0.3s;
        opacity: 0;
    }

    .arrow-box:hover:before {
        opacity: 0.5;
        transform: rotate(90deg);
    }

    .game-card {
        overflow: hidden;
        transition: transform 0.3s, box-shadow 0.3s;
        border-radius: 10px;
    }

    .game-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);
    }

    .game-link {
        text-decoration: none;
    }

    .object-fit-cover {
        width: 100%;
        height: 100%;
        object-fit: cover;
        border-radius: 10px;
        transition: opacity 0.3s;
    }

    .card-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.5);
        opacity: 0;
        transition: opacity 0.3s;
    }

    .game-link:hover .card-overlay {
        opacity: 1;
    }

    .card-title {
        font-size: 1.25rem;
        font-weight: 600;
        text-shadow: 0 2px 4px rgba(0, 0, 0, 0.7);
        text-align: center;
        margin: 0;
    }
</style>
