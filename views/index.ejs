<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Game Carousel</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .carousel-container {
            position: relative;
            overflow: hidden;
            width: 100%;
            max-height: 720px; /* Adjust as needed */
            margin-top: 30px;
        }
        .carousel-inner {
            display: flex;
            transition: transform 0.3s ease;
        }
        .carousel-item {
            flex: 0 0 33.333%; /* Show 3 items at a time */
            padding: 10px;
            transition: transform 0.3s ease, filter 0.3s ease;
            display: flex;
            justify-content: center;
            align-items: center;
        }
        .carousel-item img {
            width: 100%;
            max-height: 400px; /* Adjust as needed */
            border-radius: 10px;
            transition: transform 0.3s ease, filter 0.3s ease;
        }
        .carousel-item.active img {
            transform: scale(1.2); /* Larger scale for the centered image */
            filter: brightness(1);
        }
        .carousel-item img:not(.active) {
            filter: brightness(0.7); /* Darker images for non-centered ones */
        }
        .carousel-control-prev, .carousel-control-next {
            position: absolute;
            top: 50%;
            transform: translateY(-50%);
            font-size: 2rem;
            color: #fff;
            background-color: rgba(0, 0, 0, 0.5);
            border: none;
            cursor: pointer;
        }
        .carousel-control-prev {
            left: 10px;
        }
        .carousel-control-next {
            right: 10px;
        }
        .carousel-control-prev:hover, .carousel-control-next:hover {
            background-color: rgba(0, 0, 0, 0.8);
        }
    </style>
</head>
<body>

<div class="container mt-5">
    <div class="carousel-container">
        <div class="carousel-inner">
            <% items.forEach((item, index) => { %>
                <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
                    <a href="/game/<%= item._id %>">
                        <img src="<%= item.image %>" alt="...">
                    </a>
                </div>
            <% }) %>
        </div>
        <button class="carousel-control-prev" aria-label="Previous">
            &lt;
        </button>
        <button class="carousel-control-next" aria-label="Next">
            &gt;
        </button>
    </div>
</div>

<!-- Bootstrap JS and dependencies -->
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"></script>
<script>
    const prevButton = document.querySelector('.carousel-control-prev');
    const nextButton = document.querySelector('.carousel-control-next');
    const items = document.querySelectorAll('.carousel-item');
    let activeIndex = 0; // Start with the first item as active

    function updateCarousel() {
        const totalItems = items.length;
        const itemWidth = items[0].offsetWidth;
        const offset = -activeIndex * itemWidth;

        items.forEach((item, index) => {
            item.classList.remove('active');
        });
        items[activeIndex].classList.add('active');
        document.querySelector('.carousel-inner').style.transform = `translateX(${offset}px)`;
    }

    prevButton.addEventListener('click', () => {
        activeIndex = (activeIndex - 1 + items.length) % items.length;
        updateCarousel();
    });

    nextButton.addEventListener('click', () => {
        activeIndex = (activeIndex + 1) % items.length;
        updateCarousel();
    });

    // Initialize the carousel
    updateCarousel();
</script>

</body>
</html>
