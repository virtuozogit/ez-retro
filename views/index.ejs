<!-- Container for game images -->
<div class="container mt-5">
    <!-- Game Images Container -->
    <div class="row overflow-auto d-flex align-items-center flex-nowrap py-3">
        <% items.forEach(item => { %>
        <div class="col-md-4 mb-4 flex-shrink-0">
            <div class="card game-card text-bg-dark shadow-lg">
                <a href="/game/<%= item._id %>" class="game-link">
                    <div class="ratio position-relative" style="--bs-aspect-ratio: 115%;">
                        <img src="<%= item.image %>" class="object-fit-cover rounded" alt="Game Image">
                        <div class="card-overlay d-flex align-items-center justify-content-center">
                            <h5 class="text-light card-title"><%= item.title %></h5>
                        </div>
                    </div>
                </a>
            </div>
        </div>
        <% }) %>
    </div>
</div>

<!-- Ensure Font Awesome is included -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/js/all.min.js"></script>

<style>
    .game-card {
        overflow: hidden;
        transition: transform 0.3s, box-shadow 0.3s;
        border-radius: 10px;
    }

    .game-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);
    }

    .game-link {
        text-decoration: none;
    }

    .object-fit-cover {
        width: 100%;
        height: 100%;
        object-fit: cover;
        border-radius: 10px;
        transition: opacity 0.3s;
    }

    .card-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.5);
        opacity: 0;
        transition: opacity 0.3s;
    }

    .game-link:hover .card-overlay {
        opacity: 1;
    }

    .card-title {
        font-size: 1.25rem;
        font-weight: 600;
        text-shadow: 0 2px 4px rgba(0, 0, 0, 0.7);
        text-align: center;
        margin: 0;
    }

    .row {
        flex-wrap: nowrap;
        overflow-x: auto;
    }

    .col-md-4 {
        flex: 0 0 auto;
        width: auto;
    }
</style>
