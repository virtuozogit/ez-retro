<!-- Main Container for Navigation Arrows and Game Images -->
<div class="container mt-5 position-relative">
    <!-- Retro Title with Glitch Effect -->
    <div class="text-center mb-4">
        <h1 class="retro-title glitch" data-text="Game Selection Portal">Game Selection Portal</h1>
    </div>

    <!-- Navigation Arrows Container -->
    <div class="d-flex align-items-center justify-content-between">
        <!-- Back Arrow -->
        <a href="/prev" class="d-flex align-items-center justify-content-center arrow-link">
            <div class="arrow-box rounded-circle shadow">
                <i class="fas fa-chevron-left"></i>
            </div>
        </a>

        <!-- Game Images Container -->
        <div class="row overflow-auto d-flex align-items-center flex-grow-1 py-3">
            <% items.forEach(item => { %>
            <div class="col-md-4 mb-4">
                <div class="card game-card text-bg-dark shadow-lg">
                    <a href="/game/<%= item._id %>" class="game-link">
                        <div class="ratio position-relative" style="--bs-aspect-ratio: 115%;">
                            <img src="<%= item.image %>" class="object-fit-cover rounded" alt="Game Image">
                            <div class="card-overlay d-flex align-items-center justify-content-center">
                                <h5 class="text-light card-title"><%= item.title %></h5>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
            <% }) %>
        </div>

        <!-- Forward Arrow -->
        <a href="/next" class="d-flex align-items-center justify-content-center arrow-link">
            <div class="arrow-box rounded-circle shadow">
                <i class="fas fa-chevron-right"></i>
            </div>
        </a>
    </div>
</div>

<!-- Mario Running Animation -->
<div class="mario-runner">
    <div class="mario"></div>
</div>

<!-- Ensure Font Awesome is included -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/js/all.min.js"></script>

<style>
/* Retro Title with Glitch Effect Styling */
.retro-title {
    font-family: 'Press Start 2P', cursive;
    font-size: 2.5rem;
    color: #FFD700;
    text-shadow: 2px 2px 0 #000, 4px 4px 0 #ff0000, 6px 6px 0 #0000ff;
    margin-bottom: 2rem;
    position: relative;
    overflow: hidden;
    display: inline-block;
}

.glitch {
    display: inline-block;
    position: relative;
    color: #FFD700;
    font-size: 2.5rem;
    text-shadow: none;
    animation: glitch-animation 2s infinite linear alternate;
}

.glitch::before,
.glitch::after {
    content: attr(data-text);
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: #FFD700;
    overflow: hidden;
    animation: glitch-animation 2s infinite linear alternate;
}

.glitch::before {
    clip: rect(0, 0, 0, 0);
    text-shadow: -2px 0 red;
}

.glitch::after {
    clip: rect(0, 0, 0, 0);
    text-shadow: -2px 0 blue;
}

@keyframes glitch-animation {
    0% {
        clip: rect(0, 900px, 0, 0);
        transform: translate(-2px, -2px);
    }
    10% {
        clip: rect(0, 900px, 0, 0);
        transform: translate(2px, 2px);
    }
    20% {
        clip: rect(0, 900px, 0, 0);
        transform: translate(0px, 0px);
    }
    30% {
        clip: rect(0, 900px, 0, 0);
        transform: translate(-2px, 2px);
    }
    40% {
        clip: rect(0, 900px, 0, 0);
        transform: translate(2px, -2px);
    }
    50% {
        clip: rect(0, 900px, 0, 0);
        transform: translate(0px, 2px);
    }
    60% {
        clip: rect(0, 900px, 0, 0);
        transform: translate(-2px, 0px);
    }
    70% {
        clip: rect(0, 900px, 0, 0);
        transform: translate(2px, 2px);
    }
    80% {
        clip: rect(0, 900px, 0, 0);
        transform: translate(-2px, -2px);
    }
    90% {
        clip: rect(0, 900px, 0, 0);
        transform: translate(0px, 2px);
    }
    100% {
        clip: rect(0, 900px, 0, 0);
        transform: translate(0px, 0px);
    }
}

/* Arrow Box Styling */
.arrow-box {
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 5px;
    width: 4rem;
    height: 4rem;
    background: rgba(139, 0, 0, 0.8);
    transition: background 0.5s ease, transform 0.5s ease, box-shadow 0.5s ease;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
}

.arrow-box:hover {
    background: #661d15;
    transform: scale(1.1);
    box-shadow: 0 6px 15px rgba(0, 0, 0, 0.4);
}

.arrow-box i {
    font-size: 2rem;
    color: #FFD700 !important; /* Mustard Yellow */
}

/* Game Card Styling */
.game-card {
    overflow: hidden;
    transition: transform 0.5s ease, box-shadow 0.5s ease;
    border-radius: 10px;
    background-color: rgba(0, 0, 0, 0.8); /* Dark background for retro feel */
}

.game-card:hover {
    transform: translateY(-10px) scale(1.05);
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.5);
}

.game-link {
    text-decoration: none;
}

.object-fit-cover {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 10px;
    transition: opacity 0.3s;
}

.card-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.6); /* Darker by default */
    opacity: 1; /* Fully opaque initially */
    transition: opacity 0.5s ease, background 0.5s ease;
}

.game-link:hover .card-overlay {
    background: rgba(0, 0, 0, 0.3); /* Lighter on hover */
}

.card-title {
    font-size: 1.25rem;
    font-weight: 600;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.7);
    text-align: center;
    margin: 0;
    font-family: 'Press Start 2P', cursive; /* Matching font for a cohesive look */
}

.arrow-link {
    text-decoration: none;
}

/* Bottom Image Styling */
.bottom-image-container {
    position: fixed;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 100%;
    display: flex;
    justify-content: center;
    background: rgba(0, 0, 0, 0.7);
    padding: 1rem;
    box-shadow: 0 -4px 10px rgba(0, 0, 0, 0.3);
    z-index: 10;
}

.bottom-image {
    max-width: 300px; /* Increase the max-width to make it bigger */
    height: auto;
    opacity: 0.8;
    transition: opacity 0.3s, transform 0.3s;
}

.bottom-image:hover {
    opacity: 1;
    transform: scale(1.1);
}

/* Mario Running Animation */
.mario-runner {
    position: fixed;
    bottom: 10px; /* Position it at the bottom of the screen */
    left: 0;
    width: 100%;
    height: 400px; /* Increased height for better visibility */
    pointer-events: none; /* Ensure it doesn't interfere with clicks */
    overflow: hidden;
    z-index: 20;
}

.mario {
    position: absolute;
    bottom: 0;
    width: 120px; /* Increase the width of a single frame */
    height: 236px; /* Increase the height of the sprite */
    background-image: url('assets/spritesheet.png'); /* Replace with your sprite sheet path */
    background-size: 700px 300px; /* Adjust to the full sprite sheet size, scaled up */
    animation: run-mario 1s steps(6) infinite, move-mario 10s linear infinite;
}

@keyframes run-mario {
    0% { background-position: 0 0; }
    100% { background-position: -576px 0; } /* Adjust according to the scaled width */
}

@keyframes move-mario {
    0% { left: -100px; } /* Start position (increased for visibility) */
    100% { left: 100%; } /* End position */
}
</style>

<!-- Ensure to include Google Fonts -->
<link href="https://fonts.googleapis.com/css2?family=Press+Start+2P&display=swap" rel="stylesheet">
