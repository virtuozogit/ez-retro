<!-- Container for the arcade-style game display -->
<div class="container mt-5 position-relative arcade-container">
    <div class="row d-flex justify-content-center align-items-center">
        <!-- Retro TV Frame -->
        <div class="tv-frame">
            <div class="screen">
                <div class="row overflow-auto d-flex justify-content-center align-items-center py-3 screen-content">
                    <% items.forEach(item => { %>
                    <div class="col-4 col-md-3 col-lg-2 mb-4">
                        <div class="card game-card text-bg-dark shadow-lg">
                            <a href="/game/<%= item._id %>" class="game-link">
                                <div class="ratio position-relative" style="--bs-aspect-ratio: 100%;">
                                    <img src="<%= item.image %>" class="object-fit-cover rounded" alt="Game Image">
                                    <div class="card-overlay d-flex align-items-center justify-content-center">
                                        <h5 class="text-light card-title"><%= item.title %></h5>
                                    </div>
                                </div>
                            </a>
                        </div>
                    </div>
                    <% }) %>
                </div>
            </div>
            <!-- Controls (just for design purposes) -->
            <div class="tv-controls">
                <div class="control-button"></div>
                <div class="control-button"></div>
                <div class="control-button"></div>
            </div>
        </div>
    </div>
</div>

<!-- Ensure Font Awesome is included -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/js/all.min.js"></script>



<style>
   .arcade-container {
    max-width: 1200px;
    margin: auto;
    padding: 20px;
}

.tv-frame {
    background: linear-gradient(145deg, #800000, #600000);
    border-radius: 20px;
    padding: 30px;
    position: relative;
    box-shadow: inset 0 0 20px rgba(0, 0, 0, 0.8), 0 6px 25px rgba(0, 0, 0, 0.5);
    width: 100%;
}

.screen {
    background: #1a1a1a;
    border: 8px solid #fff;
    border-radius: 15px;
    overflow: hidden;
    padding: 20px;
    box-shadow: inset 0 0 15px rgba(0, 0, 0, 0.6);
    min-height: 600px; /* Ensures enough space for multiple game items */
}

.screen-content {
    max-height: 600px; /* Keep within the screen height */
    overflow-y: auto; /* Allows scrolling if needed */
}

.tv-controls {
    display: flex;
    justify-content: center;
    align-items: center;
    margin-top: 30px;
}

.control-button {
    width: 30px;
    height: 30px;
    background-color: #444;
    border-radius: 50%;
    margin: 0 15px;
    box-shadow: 0 3px 6px rgba(0, 0, 0, 0.3);
    transition: background-color 0.3s;
}

.control-button:hover {
    background-color: #666;
}

.game-card {
    overflow: hidden;
    transition: transform 0.3s, box-shadow 0.3s;
    border-radius: 8px;
    background: #1a1a1a;
    border: 2px solid #FFD700;
    position: relative;
}

.game-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 6px 15px rgba(0, 0, 0, 0.3);
}

.game-link {
    text-decoration: none;
    color: inherit;
}

.object-fit-cover {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 8px;
    transition: transform 0.3s;
}

.game-link:hover .object-fit-cover {
    transform: scale(1.05);
}

.card-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.7);
    opacity: 0;
    transition: opacity 0.3s;
}

.game-link:hover .card-overlay {
    opacity: 1;
}

.card-title {
    font-size: 1rem;
    font-weight: bold;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.7);
    text-align: center;
    margin: 0;
    color: #ffd700;
}

.arrow-link {
    text-decoration: none;
}

</style>
