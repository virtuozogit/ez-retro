<div class="container mt-5">
    <!-- username -->
    <div class="card text-white bg-secondary" style="border-radius: 20px 20px 0px 0px; margin-top: 40px;">
        <div class="card-body" style="padding: 25px 25px 17px 25px;">
            <h2><%= req.user.username %></h2>
            <div class="card-subtitle mb-1 text-muted">Welcome!</div>
        </div>
    </div>
    <!-- details -->
    <div class="card text-white bg-dark" style="border-radius: 0px 0px 20px 20px;">
        <div class="card-body" style="padding: 25px 25px 17px 25px; font-size: 18px;">
            <div class="row mb-3">
                <div class="col-md-12">
                    <div>
                        <% if (req.user.checkSub) {%>
                            Subscription Status: <span class="badge bg-success">Subscribed</span>
                        <% } else { %>
                            Subscription Status: <span class="badge bg-danger">Not Subscribed</span>
                        <% }  %>
                    </div>
                    <% if (req.user.checkSub) {%>
                        <!-- 2024-12-31 -->
                        <div class="mt-2">Expires on: <strong> <span style="color: yellow;"><%= req.user.formatDateSub %></span></strong></div>
                    <% } else { %>
                        <div class="mt-2">Expires on: <strong> <span style="color: red;"><%= req.user.formatDateSub %></span></strong></div>
                    <% }  %>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <a class="mt-3 btn btn-primary" href="/plans">Subscribe</a>
                </div>
            </div>
        </div>
    </div>
</div>