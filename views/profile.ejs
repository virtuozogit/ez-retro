<div class="container mt-5">
    <div class="card">
        <div class="card-header" style="padding: 18px;">
            <h2><%= req.user.username %></h2>
        </div>
        <div class="card-body" style="font-family: sans-serif; font-weight: bold;">
            <div class="row mb-3">
                <div class="col-md-12">
                    <h3>
                        <% if (req.user.checkSub) {%>
                            Subscription Status: <span class="badge bg-success">Subscribed</span>
                        <% } else { %>
                            Subscription Status: <span class="badge bg-danger">Not Subscribed</span>
                        <% }  %>
                    </h>
                    <% if (req.user.checkSub) {%>
                        <!-- 2024-12-31 -->
                        <h3>Expires on: <strong><%= req.user.formatDateSub %></strong></h3>
                    <% }  %>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <a class="btn btn-primary" href="/plans">Subscribe</a>
                </div>
            </div>
        </div>
    </div>

    <!-- username -->
    <div class="card text-white bg-secondary" style="border-radius: 20px; margin-top: 40px;">
        <div class="card-header" style="padding: 25px 25px 17px 25px;">
            <h2><%= req.user.username %></h2>
            <div class="card-subtitle mb-1 text-muted">Welcome!</div>
        </div>
    </div>
    <!-- details -->
    <div class="card text-white bg-dark" style="border-radius: 20px; margin-top: 20px;">
        <div class="card-header" style="padding: 25px 25px 17px 25px;">
            <div class="row mb-3">
                <div class="col-md-12">
                    <h6>
                        <% if (req.user.checkSub) {%>
                            Subscription Status: <span class="badge bg-success">Subscribed</span>
                        <% } else { %>
                            Subscription Status: <span class="badge bg-danger">Not Subscribed</span>
                        <% }  %>
                    </h6>
                    <% if (req.user.checkSub) {%>
                        <!-- 2024-12-31 -->
                        <h6>Expires on: <strong><%= req.user.formatDateSub %></strong></h6>
                    <% }  %>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <a class="btn btn-primary" href="/plans">Subscribe</a>
                </div>
            </div>
        </div>
    </div>
</div>