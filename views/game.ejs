<div class="container-fluid" style="height: 100vh; overflow: hidden; position: relative;" id="game-container">
    <div class="row h-100 align-items-center" style="z-index: 1; position: relative;">
        <!-- Game Display Container (Left Side) -->
        <div class="col-md-7">
            <div style="width:100%; height:auto; aspect-ratio:3/2; max-width: 100%">
                <div id="game"></div>
            </div>
        </div>

        <!-- Game Details and Controls Box (Right Side) -->
        <div class="col-md-5">
            <div class="game-info-box p-4" style="background-color: rgba(0, 0, 0, 0.7); border-radius: 10px; color: #fff; font-family: 'Press Start 2P', cursive;">
                <!-- Game Name Heading -->
                <h1 class="game-title mb-4" style="color: #fff; font-family: 'Press Start 2P', cursive; font-size: 24px;">
                    <%= game.name %>
                </h1>

                <!-- Game Objective -->
                <div id="game-description" class="mb-4" style="font-size: 16px;">
                    <!-- Description will be filled in by JavaScript -->
                </div>

                <!-- Game Controls -->
                <div id="game-controls" style="font-size: 16px;">
                    <!-- Controls will be filled in by JavaScript -->
                </div>
            </div>
        </div>
    </div>

    <!-- Emulator Script -->
    <script>
        EJS_player = "#game";

        // Core
        EJS_core = "<%= game.core %>";

        EJS_gameName = "<%= game.name %>";
        EJS_color = "#0064ff";
        EJS_pathtodata = "https://cdn.emulatorjs.org/stable/data/";

        // Game URL
        EJS_gameUrl = "<%= game.gameUrl %>";

        // JavaScript to Fill Game Details and Change Background
        window.onload = function() {
            const gameDescription = document.getElementById('game-description');
            const gameControls = document.getElementById('game-controls');
            const gameContainer = document.getElementById('game-container');

            switch (EJS_gameName) {
                case 'Super Mario Bros.':
                    gameDescription.innerHTML = `
                        <strong>Objective:</strong> Rescue Princess Toadstool from the clutches of Bowser by navigating through various levels. 
                        <br><br>
                        <strong>World:</strong> Mushroom Kingdom <br>
                        <strong>Enemy:</strong> Bowser
                    `;

                    gameControls.innerHTML = `
                        <strong>Controls:</strong><br>
                        <ul>
                            <li><kbd>Arrow Keys</kbd>: Move</li>
                            <li><kbd>Space</kbd>: Jump</li>
                            <li><kbd>Shift</kbd>: Run</li>
                        </ul>
                    `;

                    gameContainer.style.backgroundImage = "url('mariobg.jpg')";
                    break;

                case 'Sonic The Hedgehog':
                    gameDescription.innerHTML = `
                        <strong>Objective:</strong> Stop Dr. Robotnik's evil plans by collecting rings and defeating enemies through fast-paced levels.
                        <br><br>
                        <strong>World:</strong> South Island <br>
                        <strong>Enemy:</strong> Dr. Robotnik
                    `;

                    gameControls.innerHTML = `
                        <strong>Controls:</strong><br>
                        <ul>
                            <li><kbd>Arrow Keys</kbd>: Move</li>
                            <li><kbd>Space</kbd>: Jump</li>
                            <li><kbd>A</kbd>: Spin Dash</li>
                        </ul>
                    `;

                    gameContainer.style.backgroundImage = "url('sonicbg.jpg')";
                    break;

                case 'Sub-Terrania':
                    gameDescription.innerHTML = `
                        <strong>Objective:</strong> Navigate through a hostile alien world and complete missions to save your comrades.
                        <br><br>
                        <strong>World:</strong> Alien Planet <br>
                        <strong>Enemy:</strong> Aliens
                    `;

                    gameControls.innerHTML = `
                        <strong>Controls:</strong><br>
                        <ul>
                            <li><kbd>Arrow Keys</kbd>: Move</li>
                            <li><kbd>Space</kbd>: Fire Weapon</li>
                            <li><kbd>Z</kbd>: Thrust</li>
                        </ul>
                    `;

                    gameContainer.style.backgroundImage = "url('subbg.png')";
                    break;

                case "Kirby's Dream Land":
                    gameDescription.innerHTML = `
                        <strong>Objective:</strong> Guide Kirby to defeat King Dedede and restore the stolen food to Dream Land.
                        <br><br>
                        <strong>World:</strong> Dream Land <br>
                        <strong>Enemy:</strong> King Dedede
                    `;

                    gameControls.innerHTML = `
                        <strong>Controls:</strong><br>
                        <ul>
                            <li><kbd>Arrow Keys</kbd>: Move</li>
                            <li><kbd>Space</kbd>: Jump</li>
                            <li><kbd>A</kbd>: Inhale</li>
                            <li><kbd>S</kbd>: Exhale</li>
                        </ul>
                    `;

                    gameContainer.style.backgroundImage = "url('kirbybg.png')";
                    break;

                default:
                    gameDescription.innerHTML = `
                        <strong>Objective:</strong> No objective available for this game.
                    `;
                    gameControls.innerHTML = `
                        <strong>Controls:</strong> No controls available for this game.
                    `;
                    gameContainer.style.backgroundImage = "none";
                    break;
            }

            // Styling for the background image
            gameContainer.style.backgroundSize = "cover";
            gameContainer.style.backgroundPosition = "center";
            gameContainer.style.backgroundRepeat = "no-repeat";
        };
    </script>

    <script src="https://cdn.emulatorjs.org/stable/data/loader.js"></script>
</div>
