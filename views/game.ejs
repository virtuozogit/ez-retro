<div class="container" style="height: 100vh;">
    <div class="row h-100 align-items-center">
        <!-- Game Display Container (Left Side) -->
        <div class="col-md-8"> <!-- Increased the size of the game display area -->
            <div style="width:100%; height:auto; aspect-ratio:3/2; max-width: 100%">
                <div id="game"></div>
            </div>
        </div>

        <!-- Game Details and Controls Box (Right Side) -->
        <div class="col-md-4"> <!-- Decreased the size of the information box -->
            <div class="game-info-box p-4" style="background-color: rgba(0, 0, 0, 1); border-radius: 15px; color: #fff; font-family: 'Press Start 2P', cursive;">
                <!-- Game Name Heading -->
                <h1 class="game-title mb-4" style="color: #fff; font-family: 'Press Start 2P', cursive; font-size: 20px;">
                    <%= game.name %>
                </h1>

                <!-- Game Objective -->
                <div id="game-description" class="mb-4" style="font-size: 14px;">
                    <!-- Description will be filled in by JavaScript -->
                </div>

                <!-- Game Controls -->
                <div id="game-controls" style="font-size: 14px;">
                    <!-- Controls will be filled in by JavaScript -->
                </div>

                <!-- Short Game Description -->
                <div id="game-info" class="mt-4" style="font-size: 12px;">
                    <!-- Description will be filled in by JavaScript -->
                </div>
            </div>
        </div>
    </div>

    <!-- Emulator Script -->
    <script>
        EJS_player = "#game";

        // Core
        EJS_core = "<%= game.core %>";

        EJS_gameName = "<%= game.name %>";
        EJS_color = "#0064ff";
        EJS_pathtodata = "https://cdn.emulatorjs.org/stable/data/";

        // Game URL
        EJS_gameUrl = "<%= game.gameUrl %>";

        // JavaScript to Fill Game Details
        window.onload = function() {
            const gameDescription = document.getElementById('game-description');
            const gameControls = document.getElementById('game-controls');
            const gameInfo = document.getElementById('game-info');

            // Normalize game name to handle variations
            const normalizedGameName = EJS_gameName.toLowerCase();

            switch (true) {
                case normalizedGameName.includes('super mario bros'):
                    gameDescription.innerHTML = `
                        <strong>Objective:</strong> Rescue Princess Toadstool from the clutches of Bowser by navigating through various levels. 
                        <br><br>
                        <strong>World:</strong> Mushroom Kingdom <br>
                        <strong>Enemy:</strong> Bowser
                    `;

                    gameControls.innerHTML = `
                        <strong>Controls:</strong><br>
                        <ul>
                            <li><kbd>Arrow Keys</kbd>: Move</li>
                            <li><kbd>Z</kbd>: Jump</li>
                            <li><kbd>X</kbd>: Use Ability</li>
                        </ul>
                    `;

                    gameInfo.innerHTML = `
                        <strong>Developer:</strong> Nintendo<br>
                        <strong>Consoles:</strong> NES<br>
                        <strong>Release Date:</strong> 1985
                    `;
                    break;

                case normalizedGameName.includes('sonic the hedgehog'):
                    gameDescription.innerHTML = `
                        <strong>Objective:</strong> Stop Dr. Robotnik's evil plans by collecting rings and defeating enemies through fast-paced levels.
                        <br><br>
                        <strong>World:</strong> South Island <br>
                        <strong>Enemy:</strong> Dr. Robotnik
                    `;

                    gameControls.innerHTML = `
                        <strong>Controls:</strong><br>
                        <ul>
                            <li><kbd>Arrow Keys</kbd>: Move</li>
                            <li><kbd>Z</kbd>: Jump</li>
                            <li><kbd>S</kbd>: Spin Dash</li>
                        </ul>
                    `;

                    gameInfo.innerHTML = `
                        <strong>Developer:</strong> Sega<br>
                        <strong>Consoles:</strong> Sega Genesis<br>
                        <strong>Release Date:</strong> 1991
                    `;
                    break;

                case normalizedGameName.includes('sub-terrania'):
                    gameDescription.innerHTML = `
                        <strong>Objective:</strong> Navigate through a hostile alien world and complete missions to save your comrades.
                        <br><br>
                        <strong>World:</strong> Alien Planet <br>
                        <strong>Enemy:</strong> Aliens
                    `;

                    gameControls.innerHTML = `
                        <strong>Controls:</strong><br>
                        <ul>
                            <li><kbd>Arrow Keys</kbd>: Direct ship</li>
                            <li><kbd>X</kbd>: Fly</li>
                            <li><kbd>Z</kbd>: Fire Missile</li>
                        </ul>
                    `;

                    gameInfo.innerHTML = `
                        <strong>Developer:</strong> Zyrinx<br>
                        <strong>Consoles:</strong> Sega Genesis<br>
                        <strong>Release Date:</strong> 1990
                    `;
                    break;

                case normalizedGameName.includes('dream land'):
                    gameDescription.innerHTML = `
                        <strong>Objective:</strong> Guide Kirby to defeat King Dedede and restore the stolen food to Dream Land.
                        <br><br>
                        <strong>World:</strong> Dream Land <br>
                        <strong>Enemy:</strong> King Dedede
                    `;

                    gameControls.innerHTML = `
                        <strong>Controls:</strong><br>
                        <ul>
                            <li><kbd>Arrow Keys</kbd>: Move</li>
                            <li><kbd>Z</kbd>: Jump</li>
                            <li><kbd>X</kbd>: Inhale/Exhale</li>
                        </ul>
                    `;

                    gameInfo.innerHTML = `
                        <strong>Developer:</strong> HAL Laboratory<br>
                        <strong>Consoles:</strong> Game Boy<br>
                        <strong>Release Date:</strong> 1992
                    `;
                    break;

                default:
                    gameDescription.innerHTML = `
                        <strong>Objective:</strong> No objective available for this game.
                    `;
                    gameControls.innerHTML = `
                        <strong>Controls:</strong> No controls available for this game.
                    `;

                    gameInfo.innerHTML = `
                        <strong>Developer:</strong> Unknown<br>
                        <strong>Consoles:</strong> Unknown<br>
                        <strong>Release Date:</strong> Unknown
                    `;
                    break;
            }
        };
    </script>

    <script src="https://cdn.emulatorjs.org/stable/data/loader.js"></script>
</div>
