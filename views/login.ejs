    }

    .form-container {
        width: 80%;
        margin: 0 auto;
    }

/*     Border Radius of Input Fields */    
    .form-control,  
    .input-group-text {
        border-radius: 0;
    }

    .input-group{
            width: 80%;
            margin: 0 auto;
            height: 50px;
    }

    #button-login{
    border: 1px solid black;
    color: black;
