<div class="container center-screen" data-bs-theme="dark">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card mt-5">
                <div class="card-body">
                    <div class="text-center mt-5 mb-5">
                        <h4>Login</h4>
                    </div>
                    <form action="/login" method="POST">
                         <p><%= error %></p>
                         <div class="mb-3">
                            <label for="username" class="label form-label">Username</label>
                            <div class="input-group mb-5">
                                <span class="input-group-text" id="basic-addon1"> <i class="fa-solid fa-user"></i>  </span>
                                <input type="text" class="form-control" id="username" name="username" placeholder="e.g. itisdev" aria-describedby="basic-addon1" value="<%= req.body.username %>">
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="password" class="label form-label">Password</label>
                            <div class="input-group mb-3">
                                <span class="input-group-text" id="basic-addon2"> <i class="fa-solid fa-lock"></i>  </span>
                                <input type="password" class="form-control w-75" id="password" name="password" aria-describedby="basic-addon2" value="<%= req.body.password %>">
                            </div>
                        </div>
                        <button type="submit" id="button-login" class="btn btn-primary mt-5 mb-5" style="display: block; margin: 0 auto;">OK</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


<!-- Ensure Font Awesome is included for icons -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/js/all.min.js"></script>

