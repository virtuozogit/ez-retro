<div class="subscription-container mt-5">
    <h2 class="subscription-title text-center mb-4">Subscribe to Your Gaming Adventure</h2>
    <form action="/subscribe" method="POST" class="subscription-form">
        <div class="form-row mb-3">
            <div class="form-group col-md-6 mb-4">
                <label for="subscriptionPlan" class="form-label">Subscription Plan</label>
                <select class="form-control form-control-lg" id="subscriptionPlan" required>
                    <option value="standard">Standard</option>
                    <option value="premium">Premium</option>
                </select>
            </div>
            <div class="form-group col-md-6 mb-4">
                <label for="creditCardNumber" class="form-label">Credit Card Number</label>
                <input type="text" class="form-control form-control-lg" id="creditCardNumber" placeholder="Enter credit card number" required>
            </div>
        </div>
        <div class="form-row mb-3">
            <div class="form-group col-md-6 mb-4">
                <label for="phoneNumber" class="form-label">Phone Number</label>
                <input type="tel" class="form-control form-control-lg" id="phoneNumber" placeholder="Enter phone number" required>
            </div>
            <div class="form-group col-md-6 mb-4">
                <label for="address" class="form-label">Address</label>
                <input type="text" class="form-control form-control-lg" id="address" placeholder="Enter address" required>
            </div>
        </div>
        <button type="submit" class="btn btn-lg btn-primary w-100">Subscribe Now</button>
    </form>
</div>

